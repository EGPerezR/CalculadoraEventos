<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33FFFFFF"
    tools:context=".MainActivity"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        >

        <TextView
            android:id="@+id/Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"


            android:textSize="100"
            android:layout_gravity="right|center"/>

    </FrameLayout>


    <FrameLayout
        android:id="@+id/operaciones2"
        android:layout_width="wrap_content"
        android:layout_height="215dp"
        android:layout_marginTop="298dp"
        android:layout_marginLeft="310dp"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="X"
            android:layout_gravity="bottom"
            android:textColor="#FFFFFF"
            android:background="@color/ColorGrey"
            android:id="@+id/btnFor"
            android:onClick="multiplicar"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="รท"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:background="@color/ColorGrey"
            android:id="@+id/btnBetween"
            android:onClick="dividir"
            />


    </FrameLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="215dp"
        android:layout_marginTop="515dp"
        android:layout_marginLeft="310dp"
        android:id="@+id/operaciones1"
        >

        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="="
            android:layout_gravity="bottom"
            android:textColor="#FFFFFF"
            android:background="@color/ColorRed"
            android:id="@+id/btnResult"
            android:onClick="Igual"
            />
        <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="+"
        android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:background="@color/ColorGrey"
            android:id="@+id/btnMore"
            android:onClick="sumar"
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="-"
            android:layout_gravity=""
            android:textColor="#FFFFFF"
            android:background="@color/ColorGrey"
            android:id="@+id/btnRest"
            android:onClick="restar"
            />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/numeros2"
        android:layout_width="306dp"
        android:layout_height="215dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="298dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:text="7"
            android:textColor="#FFFFFF"
            android:background="@color/ColorBack"
            android:id="@+id/btn7"
            android:onClick="concatenar"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom|center"
            android:text="8"
            android:textColor="#FFFFFF"
            android:background="@color/ColorBack"
            android:onClick="concatenar"
            android:id="@+id/btn8"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom|right"
            android:text="9"
            android:textColor="#FFFFFF"
            android:background="@color/ColorBack"
            android:id="@+id/btn9"
            android:onClick="concatenar"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="CE"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:background="@color/ColorGrey"
            android:id="@+id/btnClear"
            android:onClick="clear"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="%"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:background="@color/ColorGrey"
            android:onClick="porcentaje"
            android:id="@+id/btnPorcent"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="+/-"
            android:layout_gravity="right|center"
            android:textColor="#FFFFFF"
            android:background="@color/ColorGrey"
            android:id="@+id/btn10"/>




    </FrameLayout>

    <FrameLayout
        android:layout_width="306dp"
        android:id="@+id/numeros1"
        android:layout_height="215dp"
        android:layout_marginTop="515dp"
        android:layout_marginLeft="2dp"


        >
        


        <Button
            android:layout_width="202dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:text="0"
            android:textColor="#FFFFFF"
            android:background="@color/ColorBack"
            android:onClick="concatenar"
            android:id="@+id/btn0"/>
        

        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="."
            android:layout_gravity="right|bottom"
            android:textColor="#FFFFFF"
            android:background="@color/ColorBack"
            android:onClick="concatenar"
            android:id="@+id/btnDot"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="1"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:background="@color/ColorBack"
            android:id="@+id/btn1"
            android:onClick="concatenar"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="2"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:background="@color/ColorBack"
            android:id="@+id/btn2"
            android:onClick="concatenar"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="3"
            android:layout_gravity="right|center"
            android:textColor="#FFFFFF"
            android:background="@color/ColorBack"
            android:id="@+id/btn3"
            android:onClick="concatenar"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="4"
            android:layout_gravity=""
            android:textColor="#FFFFFF"
            android:background="@color/ColorBack"
            android:id="@+id/btn4"
            android:onClick="concatenar"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="5"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:background="@color/ColorBack"
            android:id="@+id/btn5"
            android:onClick="concatenar"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:text="6"
            android:layout_gravity="right"
            android:textColor="#FFFFFF"
            android:background="@color/ColorBack"
            android:onClick="concatenar"
            android:id="@+id/btn6"
            />

    </FrameLayout>


</RelativeLayout>

